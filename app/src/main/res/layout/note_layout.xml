<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                tools:text="Q1" />


            <LinearLayout
                android:id="@+id/LLC1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_view_title"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="A1" />


                <CheckBox
                    android:id="@+id/text_view_note_correct1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="A" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLC1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_note2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="A2" />


                <CheckBox
                    android:id="@+id/text_view_note_correct2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="A" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLC3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLC2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_note3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="A3" />

                <CheckBox
                    android:id="@+id/text_view_note_correct3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="A" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LLC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LLC3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_note4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_view_note3"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    tools:text="A4" />

                <CheckBox
                    android:id="@+id/text_view_note_correct4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="A" />
            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>